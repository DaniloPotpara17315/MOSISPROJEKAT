<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FragmentProfileChangeEmail">


    <Button
        android:id="@+id/buttonChangeEmail"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/baloo_bhai_2"
        android:text="@string/changeButton"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePassConfirmBackground"
        app:shapeAppearance="@style/Button.Login.Design" />

    <ImageView
        android:id="@+id/imageTab3"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/purple_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTitle5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhai_2"
        android:text="@string/settingsChangePwTitle"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageTab3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageTab3"
        app:layout_constraintTop_toTopOf="@+id/imageTab3" />

    <ImageView
        android:id="@+id/imageBackButton3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/outline_arrow_back_white_48"
        app:layout_constraintBottom_toBottomOf="@+id/imageTab3"
        app:layout_constraintStart_toStartOf="@+id/imageTab3"
        app:layout_constraintTop_toTopOf="@+id/imageTab3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageTab3" />

    <EditText
        android:id="@+id/editTextRegisterPassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/baloo_bhai_2"
        android:hint="Unesite trenutnu šifru..."
        android:inputType="textPassword"
        android:padding="10px"

        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imagePasswordBackground"
        app:layout_constraintEnd_toEndOf="@+id/imagePasswordBackground"
        app:layout_constraintStart_toStartOf="@+id/imagePasswordBackground"
        app:layout_constraintTop_toTopOf="@+id/imagePasswordBackground"
        app:shapeAppearance="@style/Input.Login.Design" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagePasswordBackground"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:shapeAppearance="@style/Input.Login.Design"
        app:strokeColor="@color/blue"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/imagePwHide"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextRegisterPassword"
        app:layout_constraintEnd_toEndOf="@+id/editTextRegisterPassword"
        app:layout_constraintTop_toTopOf="@+id/editTextRegisterPassword"
        app:srcCompat="@drawable/outline_visibility_black_24"
        app:tint="@color/blue" />

    <EditText
        android:id="@+id/editTextRegisterPassword2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/baloo_bhai_2"
        android:hint="Unesite novu šifru..."
        android:inputType="textPassword"
        android:padding="10px"

        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imagePasswordBackground2"
        app:layout_constraintEnd_toEndOf="@+id/imagePasswordBackground2"
        app:layout_constraintStart_toStartOf="@+id/imagePasswordBackground2"
        app:layout_constraintTop_toTopOf="@+id/imagePasswordBackground2"
        app:shapeAppearance="@style/Input.Login.Design" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagePasswordBackground2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePasswordBackground"
        app:shapeAppearance="@style/Input.Login.Design"
        app:strokeColor="@color/blue"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/imagePwHide2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextRegisterPassword2"
        app:layout_constraintEnd_toEndOf="@+id/editTextRegisterPassword2"
        app:layout_constraintTop_toTopOf="@+id/editTextRegisterPassword2"
        app:srcCompat="@drawable/outline_visibility_black_24"
        app:tint="@color/blue" />

    <EditText
        android:id="@+id/editTextRegisterPassConfirm2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/baloo_bhai_2"
        android:hint="Potvrdite novu šifru..."
        android:inputType="textPassword"
        android:padding="10px"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imagePassConfirmBackground"
        app:layout_constraintEnd_toEndOf="@+id/imagePassConfirmBackground"
        app:layout_constraintStart_toStartOf="@+id/imagePassConfirmBackground"
        app:layout_constraintTop_toTopOf="@+id/imagePassConfirmBackground"
        app:shapeAppearance="@style/Input.Login.Design" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagePassConfirmBackground"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePasswordBackground2"
        app:shapeAppearance="@style/Input.Login.Design"
        app:strokeColor="@color/blue"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/imagePwConfHide"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextRegisterPassConfirm2"
        app:layout_constraintEnd_toEndOf="@+id/editTextRegisterPassConfirm2"
        app:layout_constraintTop_toTopOf="@+id/editTextRegisterPassConfirm2"
        app:srcCompat="@drawable/outline_visibility_black_24"
        app:tint="@color/blue" />
</androidx.constraintlayout.widget.ConstraintLayout>