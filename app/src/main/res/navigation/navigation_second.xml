<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_second"
    app:startDestination="@id/fragmentProfile">

    <fragment
        android:id="@+id/fragmentMap"
        android:name="com.example.petpal.FragmentMap"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/fragmentProfile"
        android:name="com.example.petpal.FragmentProfile"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/actoin_goto_settings"
            app:destination="@id/fragmentProfileSettings"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/fragmentProfileSettings"
        android:name="com.example.petpal.FragmentProfileSettings"
        android:label="FragmentProfileSettings" >
        <action
            android:id="@+id/action_backHome"
            app:destination="@id/fragmentProfile"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>
</navigation>